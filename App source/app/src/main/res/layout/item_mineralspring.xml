<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/bg_round_rect_r"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/item_mineralspring_img"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:src="@drawable/bg_round_rect"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/item_mineralspring_tv_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_mineralspring_img"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="#title"
        android:textColor="#3d95c9"
        android:textStyle="bold"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_mineralspring_tv_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_mineralspring_tv_title"
        android:text="content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:textColor="#ffffff"
        android:textSize="14sp"/>

</RelativeLayout>
